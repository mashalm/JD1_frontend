                        <a id="tone1" style="padding-right:40px"><i class="fa fa-volume-up fa-4x" aria-hidden="true" onclick="puretonetestwrapper()"></i></a>
                        <script type="text/javascript">
                            var
                                AudioContext = window.AudioContext || window.webkitAudioContext,
                                audioCtx = new AudioContext(),
                                audioDest = audioCtx.destination,
                                gain = audioCtx.createGain(),
                                adjustStateSound = {
                                    duration: 500,
                                    burst: function() {
                                    var
                                        freq = 10000,
                                        osc = audioCtx.createOscillator(),
                                        roundToNearestHalf = function(num) {
                                        return Math.round(num*2)/2;
                                        }

                                    osc.frequency.value = freq;
                                    
                                    gain.gain.value = roundToNearestHalf(1);
                                    

                                    osc.connect(gain);
                                    osc.start();
                                    setTimeout(function() {
                                        osc.stop();
                                        osc.disconnect(gain);
                                    }, adjustStateSound.duration);
                                    }
                                };
                            function puretonetestwrapper() {
                                adjustStateSound.burst();
                            }
                        </script>
